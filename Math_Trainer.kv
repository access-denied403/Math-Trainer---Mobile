<TextInput>:
    foreground_color: 0.0, 0.0, 0.0, 1
    font_size: 15
    background_color: 0.3, 0.3, 0.3, 1

<Button>:
    background_color: 0.3, 0.3, 0.3, 1
    font_size: 25

<Label>:
    color: 0.25, 0.25, 0.25, 1


<Div_page>:
    name: 'div'
    label: "Subtraction"

    Button:
        id: home
        text: 'Home'
        on_press:
            root.home()
            root.manager.transition.direction = "up"


<Mul_page>:
    name: 'mul'
    label: "Multiplication"

    Button:
        id: home
        text: 'Home'
        on_press:
            root.home()
            root.manager.transition.direction = "up"

<Sub_page>:
    name: 'sub'
    label: "Subtraction"

    Button:
        id: home
        text: 'Home'
        on_press:
            root.home()
            root.manager.transition.direction = "up"

<Add_page>:
    name: 'add'
    label: "Addition"
    
    Button:
        id: home
        text: 'Home'
        on_press:
            root.home()
            root.manager.transition.direction = "up"

<Home_page>:
    name: 'home'
    label: "Home"
    GridLayout:
        cols: 2
        rows: 2
        Button:
            id: addition
            text: 'Addition'
            on_press:
                root.addition()
                root.manager.transition.direction = "down"
        
        Button:
            id: subtraction
            text: 'Subtraction'
            on_press:
                root.subtraction()
                root.manager.transition.direction = "down"
            
        Button:
            id: multiplication
            text: 'Multiplication'
            on_press:
                root.multiplication()
                root.manager.transition.direction = "down"

        Button:
            id: division
            text: 'Division'
            on_press:
                root.division()
                root.manager.transition.direction = "down"