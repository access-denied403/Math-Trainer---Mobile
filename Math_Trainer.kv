<TextInput>:
    foreground_color: 0.0, 0.0, 0.0, 1
    font_size: 15
    background_color: 0.3, 0.3, 0.3, 1

<Button>:
    background_color: 0.3, 0.3, 0.3, 1
    font_size: 25

<Label>:
    color: 0.25, 0.25, 0.25, 1


<Div_page>:
    name: 'div'
    GridLayout:
        rows: 2
        Button:
            id: home
            size_hint_y: 0.1
            text: 'Home'
            on_press:
                root.home()
                root.manager.transition.direction = "up"
        Label:
            text: "Subtraction"


<Mul_page>:
    name: 'mul'
    GridLayout:
        rows: 2
        Button:
            id: home
            size_hint_y: 0.1
            text: 'Home'
            on_press:
                root.home()
                root.manager.transition.direction = "up"
        Label:
            text: "Multiplication"


<Sub_page>:
    name: 'sub'
    GridLayout:
        rows: 2
        Button:
            id: home
            size_hint_y: 0.1
            text: 'Home'
            on_press:
                root.home()
                root.manager.transition.direction = "up"
        Label:
            text: "Subtraction"


<Add_page>:
    name: 'add'
    GridLayout:
        rows: 2
        Button:
            id: home
            size_hint_y: 0.1
            text: 'Home'
            on_press:
                root.home()
                root.manager.transition.direction = "up"
        GridLayout:
            rows: 2
            GridLayout:
                cols: 3
                size_hint_y: 0.1
                GridLayout:
                    cols:2
                    size_hint_x: 0.3
                    Label:
                        text: "Score:"
                    Label:
                        text: "--"
                Label:
                    text: ""
                GridLayout:
                    cols: 1
                    Label:
                        text: "Addition"
                        font_size: 30

            GridLayout:
                cols: 2
                Label:
                    text: "col left"
                Label:
                    text: "col right"
                    

<Home_page>:
    name: 'home'
    GridLayout:
        cols: 2
        rows: 2
        Button:
            id: addition
            text: 'Addition'
            on_press:
                root.addition()
                root.manager.transition.direction = "down"
        
        Button:
            id: subtraction
            text: 'Subtraction'
            on_press:
                root.subtraction()
                root.manager.transition.direction = "down"
            
        Button:
            id: multiplication
            text: 'Multiplication'
            on_press:
                root.multiplication()
                root.manager.transition.direction = "down"

        Button:
            id: division
            text: 'Division'
            on_press:
                root.division()
                root.manager.transition.direction = "down"