<Button>:
	font_size: 70

<Div_page>:
    name: 'div'
    GridLayout:
        rows: 2
        Button:
            id: home
            size_hint_y: 0.1
            text: 'Home'
            on_press:
                root.home()
                root.manager.transition.direction = "up"
        Label:
            text: "Subtraction"


<Mul_page>:
    name: 'mul'
    GridLayout:
        rows: 2
        Button:
            id: home
            size_hint_y: 0.1
            text: 'Home'
            on_press:
                root.home()
                root.manager.transition.direction = "up"
        Label:
            text: "Multiplication"


<Sub_page>:
    name: 'sub'
    GridLayout:
        rows: 2
        Button:
            id: home
            size_hint_y: 0.1
            text: 'Home'
            on_press:
                root.home()
                root.manager.transition.direction = "up"
        Label:
            text: "Subtraction"


<Add_page>:
    name: 'add'
    question: question
    answer: answer
    score: score
    GridLayout:
        rows: 2
                
        GridLayout:
            rows: 2
            GridLayout:
                cols: 3
                size_hint_y: 0.1
                GridLayout:
                    cols:2
                    Label:
                        text: "Score:"
                    Label:
                        id: score
                        text: "0"
                Label:
                    text: ""
                GridLayout:
                    cols: 1
                    Label:
                        text: "Addition"
                        font_size: 70

            GridLayout:
                rows: 2
                Label:
                    id: question
                    text: root.question.text
                GridLayout:
                	rows: 2
                	TextInput:
                		id: answer
                		multiline: False
                		size_hint_y: 0.1
                	Button:
                	    id: submit
                        text: "Submit"
                        on_press:
                        	root.submit()
        Button:
            id: home
            size_hint_y: 0.1
            text: 'Home'
            on_press:
                root.home()
                root.manager.transition.direction = "up"
                    

<Home_page>:
    name: 'home'
    GridLayout:
        cols: 2
        rows: 2
        Button:
            id: addition
            text: 'Addition'
            on_press:
                root.addition()
                root.manager.transition.direction = "down"
        
        Button:
            id: subtraction
            text: 'Subtraction'
            on_press:
                root.subtraction()
                root.manager.transition.direction = "down"
            
        Button:
            id: multiplication
            text: 'Multiplication'
            on_press:
                root.multiplication()
                root.manager.transition.direction = "down"

        Button:
            id: division
            text: 'Division'
            on_press:
                root.division()